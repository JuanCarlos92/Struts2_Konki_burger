<struts>

    <package name="user" namespace="/User" extends="struts-default">
        <action name="Login" class="com.konkiburger.user.action.LoginAction">
            <result name="success" type="redirectAction">Inicio</result>
            <result name="error" type="dispatcher">pages/login.jsp</result>
        </action>
        <action name="Inicio" class="com.konkiburger.user.action.InicioAction">
            <result name="success">pages/inicio.jsp</result>
            <!-- Redireccionamos en caso de error a que se quede en la misma pÃ¡gina -->
            <result name="error" type="redirectAction">Login</result>
        </action>
        <action name="Productos" class="com.konkiburger.user.action.ProductoAction">
            <result name="success">pages/productos.jsp</result>
            <result name="error" type="redirectAction">Login</result>
        </action>
        <action name="Categorias" class="com.konkiburger.user.action.CategoriaAction">
            <result name="success">pages/categorias.jsp</result>
            <result name="error" type="redirectAction">Login</result>
        </action>
        <action name="Pedidos" class="com.konkiburger.user.action.PedidoAction">
            <result name="success">pages/pedidos.jsp</result>
            <result name="error" type="redirectAction">Login</result>
        </action>
        <action name="detallePedido" class="com.konkiburger.user.action.PedidoDetalleAction">
            <result name="success">pages/detallePedido.jsp</result>
            <result name="error" type="redirectAction">Login</result>
